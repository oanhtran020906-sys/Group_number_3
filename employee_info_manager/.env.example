
# ============================================
# Employee Information Manager - Environment Variables
# ============================================
# Copy this file to `.env` and fill in your values
# NEVER commit `.env` to version control!

# ========= DATABASE CONFIGURATION =========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=0328825202
DB_NAME=employee_information_manager

# ========= APPLICATION SETTINGS =========
DEBUG=True
LOG_LEVEL=INFO
TIMEZONE=Asia/Ho_Chi_Minh

# ========= GUI SETTINGS =========
THEME=clam  # Options: clam, alt, default, classic
LANGUAGE=en  # en for English, vi for Vietnamese
FONT_SIZE=10
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# ========= EXPORT SETTINGS =========
CSV_DELIMITER=,
CSV_ENCODING=utf-8
EXPORT_PATH=./exports/

# ========= CHART SETTINGS =========
CHART_STYLE=ggplot  # matplotlib style
COLOR_PALETTE=Set2

# ========= TEST MODE =========
# Set to True for testing (uses test database)
TEST_MODE=False
TEST_DB_NAME=employee_manager_test
